---
export interface Props {
  title: string;
  body?: string;
  children: any;
}

const { title, body } = Astro.props;
---

<li class="link-card">
  <div>
    <h2 class="ynabish-blue">
      {title}
    </h2>
		<div class="text-container">
			<p>
				{body}
				<slot />
			</p>
		</div>
  </div>
</li>
<style>
  .link-card {
    list-style: none;
    display: flex;
    padding: 0.15rem;
    background-color: white;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -2px rgba(0, 0, 0, 0.1);
    margin-bottom: 1rem;
  }

  .link-card > div {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 1rem 1.3rem;
    border-radius: 0.35rem;
    color: #111;
    background-color: white;
  }
  h2 {
		color: var(--ynabish-blue);
    margin: 0;
    font-size: 1.25rem;
  }
	.text-container {
		color: #222;
	}
</style>
